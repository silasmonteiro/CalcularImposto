<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:visibility="visible">




    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="PORCENTAGEM"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_valorNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:minHeight="48dp"
        android:hint="@string/r_1_0000_00"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/tv_titulo"
        app:layout_constraintStart_toStartOf="@+id/tv_titulo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo" />

    <Button
        android:id="@+id/bt_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/et_valorNota"
        app:layout_constraintStart_toStartOf="@+id/et_valorNota"
        app:layout_constraintTop_toBottomOf="@+id/et_valorNota" />

    <TextView
        android:id="@+id/tv_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        tools:text="1000,00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_calcular"
        app:layout_constraintStart_toStartOf="@+id/bt_calcular"
        app:layout_constraintTop_toBottomOf="@+id/bt_calcular" />

    <TextView
        android:id="@+id/tv_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="600,00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_60"
        app:layout_constraintStart_toStartOf="@+id/tv_60"
        app:layout_constraintTop_toBottomOf="@+id/tv_60" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="400,00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_40"
        app:layout_constraintStart_toStartOf="@+id/tv_40"
        app:layout_constraintTop_toBottomOf="@+id/tv_40" />

    <TextView
        android:id="@+id/tv_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="300,00"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_5"
        app:layout_constraintStart_toStartOf="@+id/tv_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_5" />


</androidx.constraintlayout.widget.ConstraintLayout>